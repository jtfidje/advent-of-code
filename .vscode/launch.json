  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--port", "8502"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: FastAPI reload",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8502"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Docker Debug",
      "type": "debugpy",
      "request": "attach",
      "connect": {
          "host": "localhost",
          "port": 5678
      },
      "pathMappings": [
          {
              "localRoot": "${workspaceFolder}",
              "remoteRoot": "/app"
          }
      ],
      "justMyCode": true
    }
  ]
}
